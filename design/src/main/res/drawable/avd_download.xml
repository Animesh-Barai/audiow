<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="download"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <clip-path
                android:name="clip"
                android:pathData="M 0 0 L 24 0 L 24 22 L 0 22"/>
            <path
                android:name="path"
                android:pathData="M 21 15 L 21 19 C 21 19.53 20.789 20.039 20.414 20.414 C 20.039 20.789 19.53 21 19 21 L 5 21 C 4.47 21 3.961 20.789 3.586 20.414 C 3.211 20.039 3 19.53 3 19 L 3 15"
                android:fillColor="#00000000"
                android:strokeColor="?colorOnBackground"
                android:strokeWidth="2"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"/>
            <group android:name="group">
                <path
                    android:name="path_1"
                    android:pathData="M 7 10 L 12 15 L 17 10"
                    android:fillColor="#00000000"
                    android:strokeColor="?colorOnBackground"
                    android:strokeWidth="2"
                    android:strokeLineCap="round"
                    android:strokeLineJoin="round"/>
                <path
                    android:name="path_2"
                    android:pathData="M 12 15 L 12 3"
                    android:fillColor="#00000000"
                    android:strokeColor="?colorOnBackground"
                    android:strokeWidth="2"
                    android:strokeLineCap="round"
                    android:strokeLineJoin="round"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="800"
                    android:valueFrom="0"
                    android:valueTo="18"
                    android:valueType="floatType"
                    android:interpolator="@android:anim/accelerate_interpolator"/>
                <objectAnimator
                    android:propertyName="translateY"
                    android:startOffset="1000"
                    android:duration="1000"
                    android:valueFrom="-16"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
