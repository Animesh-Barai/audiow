<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipToPadding="false"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/feed_fragment"
            android:name="ismaeldivita.audioma.podcast.feature.ui.discover.PodcastDiscoverFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_surface"
        android:elevation="28dp"
        android:paddingHorizontal="@dimen/screen_horizontal_padding"
        app:cnb_hideOnScroll="true"
        app:cnb_addBottomInset="true"
        app:cnb_menuResource="@menu/main_bottom_menu"
        app:cnb_orientationMode="horizontal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
