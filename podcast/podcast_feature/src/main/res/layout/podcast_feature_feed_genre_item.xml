<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="ismaeldivita.audioma.design.databinding.TransformationType" />

        <variable
            name="podcast"
            type="ismaeldivita.audioma.podcast.data.model.Podcast" />

    </data>


    <LinearLayout
        android:layout_width="@dimen/podcast_feature_feed_genre_section_item_cover"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/podcast_feature_feed_genre_section_item_cover"
            android:layout_height="@dimen/podcast_feature_feed_genre_section_item_cover"
            app:load="@{podcast.getArtwork(400).url}"
            app:loadCrossFade="@{true}"
            app:loadPlaceholder="@{@drawable/ic_temp_placeholder}"
            app:loadTransformation='@{ TransformationType.ROUNDED_CORNERS }'
            app:loadTransformationRadius="@{@dimen/podcast_feature_feed_genre_section_item_cover_corner}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@{podcast.title}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{podcast.artistName}" />

    </LinearLayout>

</layout>