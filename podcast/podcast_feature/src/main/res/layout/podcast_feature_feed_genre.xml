<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="genreSection"
            type="ismaeldivita.audioma.podcast.data.model.FeedSection.GenreSection" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genre_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/screen_horizontal_padding"
            android:text="@{genreSection.genre.name}"
            android:textAppearance="?textAppearanceHeadline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:paddingLeftSystemWindowInsets="@{true}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/podcasts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_3"
            android:nestedScrollingEnabled="false"
            app:data="@{genreSection.podcasts}"
            app:horizontalSpaceDecoration="@{@dimen/screen_horizontal_padding}"
            app:horizontalSystemWindowInsetsDecoration="@{true}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genre_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>